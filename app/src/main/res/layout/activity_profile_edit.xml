<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".view.profile.AProfileEdit"
    android:background="@color/colorEditBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aprofileedit_backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_30">

        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1">
        </TextView>

        <ImageView
            android:id="@+id/aprofileedit_saveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_baseline_check_30">

        </ImageView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image1"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorPrimaryDark">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image2"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorAccent">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image3"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorPrimary">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image4"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorPrimaryDark">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image5"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorAccent">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image6"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorPrimary">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image7"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorPrimaryDark">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/aprofileedit_image8"
                                android:layout_width="91dp"
                                android:layout_height="80dp"
                                android:background="@color/colorAccent">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/aprofileedit_bioText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Describe yourself"
                        android:gravity="top"
                        android:maxLength="250"
                        android:background="#ffff">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#000000"
                    android:paddingTop="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/aprofileedit_addressText"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:hint="e.g. Copenhagen"
                        android:gravity="top"
                        android:maxLength="37"
                        android:background="#ffff">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job"
                    android:textColor="#000000"
                    android:paddingTop="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/aprofileedit_jobText"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:hint="e.g. Software Developer"
                        android:gravity="top"
                        android:maxLength="37"
                        android:background="#ffff">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textColor="#000000"
                    android:paddingTop="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/aprofileedit_educationText"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:hint="e.g. DTU"
                        android:gravity="top"
                        android:maxLength="37"
                        android:background="#ffff">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:textColor="#000000"
                    android:paddingTop="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardCornerRadius="8dp">

                    <Button
                        android:id="@+id/aprofileedit_instagramButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffff"
                        android:backgroundTint="@color/colorAccent"
                        android:gravity="center"
                        android:text="Connect"
                        android:textColor="@color/colorEditBackground"
                        android:textSize="20dp"
                        android:textAllCaps="false">

                    </Button>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>