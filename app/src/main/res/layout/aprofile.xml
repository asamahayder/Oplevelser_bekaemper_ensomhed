<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".AProfile"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorAccent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <ImageView
                        android:id="@+id/aprofile_pfp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pfp_image1">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55sp"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:paddingLeft="16sp"
                            android:paddingRight="16sp"
                            android:background="@drawable/pfp_gradient_bot2top">

                            <TextView
                                android:id="@+id/aprofile_nameAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mads, 22"
                                android:textColor="#ffffff"
                                android:textSize="23sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="2dp"
                                android:paddingStart="5dp">

                                <View
                                    android:id="@+id/aprofile_line1"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#ffffff"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line2"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line3"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line4"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line5"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line6"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line7"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                                <View
                                    android:id="@+id/aprofile_line8"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:background="#7E7878"
                                    android:layout_marginRight="7sp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/aprofile_pressLeft"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </View>

                    <View
                        android:id="@+id/aprofile_pressRight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </View>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:id="@+id/aprofile_addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="19sp">

                    <ImageView
                        android:id="@+id/aprofile_addressIcon"
                        android:layout_width="15sp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_location_on_15">
                    </ImageView>

                    <TextView
                        android:id="@+id/aprofile_address"
                        android:text="KÃ¸benhavn NV"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aprofile_occupationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="19sp">

                    <ImageView
                        android:id="@+id/aprofile_occupationIcon"
                        android:layout_width="15sp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_work_15">
                    </ImageView>

                    <TextView
                        android:id="@+id/aprofile_occupation"
                        android:text="Software Develoiper"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aprofile_educationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="19sp">

                    <ImageView
                        android:id="@+id/aprofile_educationIcon"
                        android:layout_width="15sp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_school_15">
                    </ImageView>

                    <TextView
                        android:id="@+id/aprofile_education"
                        android:text="DTU"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="25dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ffffff"
                        android:layout_marginBottom="5dp">
                    </View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/aprofile_bio"
                        android:text="Hej jeg hedder mads og jeg kan godt lide pandekager pls give me more pls"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="@drawable/pfp_gradient_top2bot"
        android:layout_width="match_parent"
        android:layout_height="55sp">

        <ImageView
            android:id="@+id/aprofile_backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_30"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/aprofile_editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:srcCompat="@drawable/ic_baseline_edit_28"
            android:focusable="true" />

    </LinearLayout>

</FrameLayout>