<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="color">@color/ic_launcher_background</item>
    </style>

    <style name="Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="color">@color/ic_launcher_background</item>
    </style>

    <!--Modified version of https://stackoverflow.com/questions/11253512/change-on-color-of-a-switch-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/confirm_green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopMe">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

</resources>
